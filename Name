<body>

    <div class="container">
        <h1>Contador de Planos Hapvida</h1>

        <div class="section">
            <label for="plan-type">Selecione o tipo de plano:</label>
            <select id="plan-type">
                <option value="individual">Plano Individual</option>
                <option value="empresarial">Plano Empresarial</option>
            </select>
        </div>

        <div class="section">
            <label for="ages">Idades (separadas por vírgula):</label>
            <input type="text" id="ages" placeholder="Exemplo: 25,30,35,40">

            <button onclick="calculatePlan()">Calcular Valores</button>
        </div>

        <div class="result" id="result"></div>

        <div class="footer">
            <p>Equipe Alpha A Melhor</p>
        </div>
    </div>

    <script>
        function calculatePlan() {
            const planType = document.getElementById("plan-type").value;
            const agesInput = document.getElementById("ages").value;
            const ages = agesInput.split(",").map(age => age.trim());

            let result = "";
            let totalWithCoparticipation = 0;
            let totalWithoutCoparticipation = 0;

            if (planType === "individual") {
                result += "<strong>Plano Individual:</strong><br>";

                ages.forEach(age => {
                    age = parseInt(age);
                    if (age >= 0 && age <= 18) {
                        result += `Idade ${age} / R$ 152,80 (Com Coparticipação)<br>`;
                        result += `Idade ${age} / R$ 186,00 (Sem Coparticipação)<br>`;
                        totalWithCoparticipation += 152.80;
                        totalWithoutCoparticipation += 186.00;
                    } else if (age >= 19 && age <= 23) {
                        result += `Idade ${age} / R$ 195,29 (Com Coparticipação)<br>`;
                        result += `Idade ${age} / R$ 239,10 (Sem Coparticipação)<br>`;
                        totalWithCoparticipation += 195.29;
                        totalWithoutCoparticipation += 239.10;
                    } else if (age >= 24 && age <= 28) {
                        result += `Idade ${age} / R$ 221,57 (Com Coparticipação)<br>`;
                        result += `Idade ${age} / R$ 271,96 (Sem Coparticipação)<br>`;
                        totalWithCoparticipation += 221.57;
                        totalWithoutCoparticipation += 271.96;
                    }
                    // Adicione mais faixas de idade conforme necessário
                });

                result += `<strong>Total com Coparticipação: R$ ${totalWithCoparticipation.toFixed(2)}</strong><br>`;
                result += `<strong>Total sem Coparticipação: R$ ${totalWithoutCoparticipation.toFixed(2)}</strong><br>`;
            }

            if (planType === "empresarial") {
                result += "<strong>Plano Empresarial:</strong><br>";

                ages.forEach(age => {
                    age = parseInt(age);
                    if (age >= 0 && age <= 18) {
                        result += `Idade ${age} / R$ 116,52 (Com Coparticipação)<br>`;
                        result += `Idade ${age} / R$ 149,08 (Sem Coparticipação)<br>`;
                        totalWithCoparticipation += 116.52;
                        totalWithoutCoparticipation += 149.08;
                    } else if (age >= 19 && age <= 23) {
                        result += `Idade ${age} / R$ 130,90 (Com Coparticipação)<br>`;
                        result += `Idade ${age} / R$ 166,97 (Sem Coparticipação)<br>`;
                        totalWithCoparticipation += 130.90;
                        totalWithoutCoparticipation += 166.97;
                    } else if (age >= 24 && age <= 28) {
                        result += `Idade ${age} / R$ 146,16 (Com Coparticipação)<br>`;
                        result += `Idade ${age} / R$ 187,01 (Sem Coparticipação)<br>`;
                        totalWithCoparticipation += 146.16;
                        totalWithoutCoparticipation += 187.01;
                    }
                    // Adicione mais faixas de idade conforme necessário
                });

                result += `<strong>Total com Coparticipação: R$ ${totalWithCoparticipation.toFixed(2)}</strong><br>`;
                result += `<strong>Total sem Coparticipação: R$ ${totalWithoutCoparticipation.toFixed(2)}</strong><br>`;
            }

            document.getElementById("result").innerHTML = result;
        }
    </script>

